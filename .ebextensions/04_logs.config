# .ebextensions/03_logs.config
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_log_deployment.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      echo "Deployment completed at $(date)" >> /var/log/deploy.log
      echo "Current directory contents:" >> /var/log/deploy.log
      ls -R /var/app/current >> /var/log/deploy.log
      echo "Environment variables:" >> /var/log/deploy.log
      env >> /var/log/deploy.log